{
    "name": "easedevs/yii2-tinymce-widget",
    "description": "TinyMCE widget for Yii2.",
    "type": "yii2-extension",
    "keywords": [
        "2amigos",
        "yii",
        "yii2",
        "yii 2",
        "extension",
        "widget",
        "tinymce",
        "easedevs"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "2amigOS! Consulting Group",
            "email": "hola@2amigos.us",
            "homepage": "http://2amigos.us",
            "role": "Developer"
        },
        {
            "name": "Ease Tech LLC",
            "email": "support@easetechllc.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/easedevs/yii2-tinymce-widget/issues",
        "source": "https://github.com/easedevs/yii2-tinymce-widget"
    },
    "prefer-stable": true,
    "require": {
        "yiisoft/yii2": "^2.0",
        "tinymce/tinymce": "^7.0",
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "easedevs\\tinymce\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "extra": {
        "asset-installer-paths": {
            "bower-asset-library": "vendor/bower"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
